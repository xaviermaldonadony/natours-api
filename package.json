{
  "name": "natours",
  "version": "1.0.0",
  "description": "nodejs expres and mongoDB",
  "main": "app.js",
  "scripts": {
    "start-all": "npm-run-all --parallel debug start:dev:debug",
    "start": "yarn run start:babel && yarn  run start:dev",
    "start:babel": "babel src --out-dir dist",
    "start:dev2": "nodemon --no-warnings dist/server.js --exec babel-node",
    "start:dev": "nodemon  src/server.js",
    "start:prod": "NODE_ENV=production nodemon src/server.js",
    "debug": "ndb src/server.js ",
    "dev": "node src/server.js",
    "watch:js": "parcel watch ./src/public/js/index.js --out-dir ./src/public/js --out-file bundle.js --public-url .",
    "build:js": "parcel build ./src/public/js/index.js --out-dir ./src/public/js --out-file bundle.js --public-url ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/node": "^7.12.16",
    "@babel/plugin-transform-async-to-generator": "^7.12.13",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.16",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.2",
    "express-rate-limit": "^5.2.6",
    "helmet": "4.2.0",
    "hpp": "^0.2.3",
    "html-to-text": "^7.0.0",
    "jsonwebtoken": "^8.5.1",
    "kill-port": "^1.6.1",
    "mongoose": "5.11.15",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.18",
    "pug": "^3.0.2",
    "sharp": "^0.27.2",
    "slugify": "^1.4.6",
    "stripe": "^8.138.0",
    "validator": "^13.5.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "1.12.3",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
